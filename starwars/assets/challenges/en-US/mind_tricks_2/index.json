{
    "version": "1.0.0",
    "id": "mind_tricks_2",
    "name": "Control Stormtroopers",
    "defaultApp": "{\"source\":\"<xml xmlns=\\\"http://www.w3.org/1999/xhtml\\\"><block type=\\\"events_onStart\\\" id=\\\"c?07l}0,s^0Pic$^5Q-K\\\" x=\\\"100\\\" y=\\\"200\\\"><field name=\\\"FLASH\\\"></field><statement name=\\\"CALLBACK\\\"></statement></block></xml>\",\"code\":\"// @challenge-id: mind_2\\n// @challenge-name: Control Stormtroopers\\n\\nevents.onStart(function() {\\n  // @challenge-start\\n  objects.add('Stormtrooper', 'Stormtrooper', position.create(500, 300));\\n  objects.add('Stormtrooper', 'Stormtrooper 2', position.create(300, 300));\\n\\n});\\n\\nevents.onSwipe('right', function() {\\n  speaker.play('Mind trick');\\n  position.applyForce(objects.get('all'), 90, 300);\\n\\n});\\n\\nevents.onSwipe('left', function() {\\n  speaker.play('Mind trick');\\n  position.applyForce(objects.get('all'), 270, 300);\\n  // @end-of-challenge: content\\n\\n});\\n\",\"scene\":\"loading-bay\",\"parts\":[],\"profile\":\"swk\"}",
